@model IEnumerable<UserToReturnDto>


<form class="my-3">
    <div class="container justify-content-center">
        <div class="row">
            <div class=" col-6">
                <input id="SearchInput" placeholder="Search By Name" name="SearchInput" class="form-control" />
            </div>
            <div class=" col-6">
                <input type="submit" value="Search" class="btn btn-success" value="Search" />
            </div>
        </div>
    </div>
</form>

<h1>
    All Users
</h1>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Frist Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FristName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @foreach (var role in user.Roles)
                        {
                            <span>@role</span>
                        }
                    </td>
                   
                    <Partial name="_ButtonPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="m-4 alert alert-success">
        <h4>There are no Users :)</h4>
    </div>
}


