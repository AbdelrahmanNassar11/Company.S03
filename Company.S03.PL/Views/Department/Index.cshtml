@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>
All Department
</h1>
<br />
<br />
<a class="btn btn-primary" asp-action="Create">Create Department</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt.ToShortDateString()</td>
                    <td><a class="btn btn-warning" asp-action="Details">Details</a></td>
                    <td><a class="btn btn-success" asp-action="Edit">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="m-4 alert alert-info">
        <h4>There are no Departments :)</h4>
    </div>
}

