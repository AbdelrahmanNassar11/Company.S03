@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Details Page</h1>
<br />
<br />
<div asp-action="Details">
     <div class="m-3">
         <label asp-for="Name" class="col-form-label"></label>
         <input type="text" asp-for="Name" class="form-control" readonly />
     </div>

     <div class="m-3">
         <label asp-for="Age" class="col-form-label"></label>
         <input type="text" asp-for="Age" class="form-control" readonly />
     </div>

     <div class="m-3">
         <label asp-for="Email" class="col-form-label"></label>
         <input type="text" asp-for="Email" class="form-control" readonly/>
     </div>

     <div class="m-3">
         <label asp-for="Address" class="col-form-label"></label>
         <input type="text" asp-for="Address" class="form-control" readonly />
     </div>

     <div class="m-3">
         <label asp-for="Phone" class="col-form-label"></label>
         <input type="text" asp-for="Phone" class="form-control" readonly />
     </div>

     <div class="m-3">
         <label asp-for="Salary" class="col-form-label"></label>
         <input type="text" asp-for="Salary" class="form-control" readonly />
     </div>

     <div class="m-3">
         <input asp-for="IsActive" class="form-check" dis/>
         <label asp-for="IsActive" class="col-form-label"></label>
     </div>

     <div class="m-3">
         <input asp-for="IsDeleted" class="form-check" disabled/>
         <label asp-for="IsDeleted" class="col-form-label"></label>
     </div>

     <div class="m-3">
         <label asp-for="HiringDate" class="col-form-label">Data Of Creation</label>
         <input type="datetime-local" asp-for="HiringDate" class="form-control" readonly/>
     </div>

     <div class="m-3">
         <label asp-for="CreateAt" class="col-form-label">Data Of Creation</label>
         <input type="datetime-local" asp-for="CreateAt" class="form-control" readonly/>
     </div>

    <div class="m-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>